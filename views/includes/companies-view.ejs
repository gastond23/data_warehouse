<div class="agregate-company-container">
    <h1>Companías</h1>
    <div class="btn-container">
        <button id="agregate-btn" type="button" class="btn btn-outline-secondary">Agregar Companía</button>
    </div>
</div>
<table id="table" class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">País</th>
            <th scope="col">Dirección</th>
            <th scope="col">Teléfono</th>
            <th scope="col">Acción</th>
        </tr>
    </thead>
    <tbody>
        <% for (let company of data) { %>
        <tr>
            <th scope="row" class="align-middle"><%= company.id %> </th>
            <td class="align-middle"><%= company.name %></td>
            <td class="align-middle"><%= company.city.country.name %></td>
            <td class="align-middle"><%= company.adress %></td>
            <td class="align-middle"><%= company.phone %></td>
            <td class="align-middle">
                <button type="button" class="btn btn-primary btn-edit" value="<%= company.id %>"
                    onclick="editCompany(value)">Editar</button>
                <button type="button" class="btn btn-danger btn-delete" value="<%= company.id %>"
                    onclick="deleteCompany(value)">Borrar</button>
            </td>
        </tr>
        <% }; %>
    </tbody>
</table>

<div class="overlay-form">
    <h2 id="form-title"></h2>
    <a href="/companies" class="close-btn"><i class="fas fa-times"></i></a>
    <form class="signup-form">
        <div class="form-group">
            <label for="validationServer01">Nombre</label>
            <input type="text" class="form-control mx-sm-3" id="name" required>
        </div>
        <div class="form-group">
            <label for="validationServer02">Dirección</label>
            <input type="text" class="form-control mx-sm-3" id="adress" required>
        </div>
        <div class="form-group">
            <label for="inputEmail3">Email</label>
            <input type="email" class="form-control mx-sm-3" id="email">
        </div>
        <div class="form-group">
            <label for="validationServer01">Teléfono</label>
            <input type="text" class="form-control mx-sm-3" id="phone" required>
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text" for="inputGroupSelect01">Región</label>
            <select class="form-select" id="select-region">
                <option selected>Elegir...</option>
            </select>
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text" for="inputGroupSelect01">País</label>
            <select class="form-select" id="select-country" disabled>
                <option selected>Elegir...</option>
            </select>
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text" for="inputGroupSelect01">Ciudad</label>
            <select class="form-select" id="select-city" disabled>
                <option selected>Elegir...</option>
            </select>
        </div>
        <button class="btn btn-primary" id="agregate_company_btn"></button>
    </form>
</div>

