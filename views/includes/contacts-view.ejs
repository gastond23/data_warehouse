<h1 class="contacts-title">Contactos</h1>
<% if(data == 0 || status == 400) { %>
<div class="no-data-container">
    <h3>No existen contactos</h3>
    <button type="button" class="btn btn-primary btn-sm">Agregar Contacto</button>
</div>
<% } else if (data > 0 || status == 200) { %>
<div class="contact-search-container">
    <label for="exampleDataList" class="form-label"></label>
    <div class="input-cont">
        <input class="form-control" list="datalistOptions" id="exampleDataList" placeholder="Type to search...">
        <datalist id="datalistOptions">
        </datalist>
        <button type="button" class="btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                    d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z" />
                <path fill-rule="evenodd"
                    d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
            </svg></button>
    </div>
    <button type="button" class="btn btn-primary btn-sm" onclick="createContactForm()">Agregar Contacto</button>
</div>

<table id="table" class="table table-striped table-sm table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Avatar</th>
            <th scope="col">Nombre y Apellido</th>
            <th scope="col">Email</th>
            <th scope="col">Telefono</th>
            <th scope="col">Puesto</th>
            <th scope="col">Compania</th>
            <th scope="col">País / Región</th>
            <th scope="col">Acción</th>
        </tr>
    </thead>
    <tbody>
        <% for (let contacts of data) { %>
        <tr>
            <th scope="row" class="align-middle"><%= contacts.id %> </th>
            <td class="avatar align-middle"><img src="<%= contacts.img %>" alt="Avatar"></td>
            <td class="align-middle"><%= contacts.name %> <%= contacts.lastname %></td>
            <td class="align-middle"><%= contacts.email %></td>
            <td class="align-middle"><%= contacts.phone %></td>
            <td class="align-middle"><%= contacts.company.name %></td>
            <td class="align-middle"><%= contacts.city.country.name %> / <%= contacts.city.country.region.name %></td>
            <td class="align-middle">
                <button type="button" class="btn btn-primary">Editar</button>
                <button type="button" class="btn btn-danger">Borrar</button>
            </td>
        </tr>
        <% }; %>
    </tbody>
</table>
<% } %>

            <div class="input-group mb-3">
                <form action="/upload" method="post" enctype="multipart/form-data">
                <input type="file" class="form-control" id="inputFile" aria-describedby="inputGroupFileAddon04"
                    aria-label="Upload" name="image">
                <button class="btn btn-outline-secondary" type="submit" id="upload-btn">Button</button>
            </form>
            </div>
