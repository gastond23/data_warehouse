<h1 class="contacts-title">Contactos</h1>
<% if(data.length <= 0) { %>
<div class="no-data-container">
    <h3>No existen contactos</h3>
    <a class="btn btn-outline-secondary" href="/form-contact" role="button">Agregar Contacto</a>
</div>
<% } else if (data.length > 0) { %>
<form class="contact-search-container" method="POST" action="/search-contacto"
    enctype="application/x-www-form-urlencoded">
    <label for="exampleDataList" class="form-label"></label>
    <div class="input-cont">
        <input class="form-control" list="datalistOptions" id="exampleDataList" type="text"
            placeholder="Type to search..." name="search">
        <datalist id="datalistOptions">
        </datalist>
        <button id="search_btn" type="submit" class="btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16"
                height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                    d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z" />
                <path fill-rule="evenodd"
                    d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
            </svg></button>
    </div>
    <a class="btn btn-outline-secondary" href="/form-contact" role="button">Agregar Contacto</a>
</form>

<table id="table" class="table table-striped table-sm table-bordered">
    <thead>
        <tr>
            <th scope="col">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckIndeterminate">
                    <label class="form-check-label" for="flexCheckIndeterminate">
                        ID
                    </label>
                </div>
            </th>
            <th scope="col">Avatar</th>
            <th scope="col">Nombre y Apellido</th>
            <th scope="col">Email</th>
            <th scope="col">Telefono</th>
            <th scope="col">Puesto</th>
            <th scope="col">Compania</th>
            <th scope="col">Interés</th>
            <th scope="col">País / Región</th>
            <th scope="col">Acción</th>
        </tr>
    </thead>
    <tbody>
        <% for (let contacts of data) { %>
        <tr>
            <th scope="row" class="align-middle">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="<%= contacts.id %>" id="flexCheckDefault<%= contacts.id %>">
                    <label class="form-check-label" for="flexCheckDefault<%= contacts.id %>">
                        <%= contacts.id %>
                    </label>
                </div>
            </th>
            <td class="avatar align-middle"><img src="/uploads/<%= contacts.img %>" alt="Avatar"></td>
            <td class="align-middle"><%= contacts.name %> <%= contacts.lastname %></td>
            <td class="align-middle"><%= contacts.email %></td>
            <td class="align-middle"><%= contacts.phone %></td>
            <td class="align-middle"><%= contacts.position %></td>
            <td class="align-middle"><%= contacts.company.name %></td>
            <td class="align-middle">
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                        aria-valuenow="<%= contacts.interest %>" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </td>
            <td class="align-middle"><%= contacts.city.country.name %> / <%= contacts.city.country.region.name %> </td>
            <td class="align-middle">
                <button type="button" class="btn btn-primary" value="<%= contacts.id %>"
                    onclick="editContact(value)">Editar</button>
                <button type="button" class="btn btn-danger" value="<%= contacts.id %>"
                    onclick="deleteContact(value)">Borrar</button>
            </td>
        </tr>
        <% }; %>
    </tbody>
</table>
<% } %>

<div class="form-contenedor">
    <a href="/contactos" class="close-btn"><i class="fas fa-times"></i></a>
    <form class="contact-form" method="POST" action="/editar-contacto" enctype="multipart/form-data">
        <h2 id="form-title">Editar Contacto</h2>
        <div class="form-group">
            <input type="text" class="form-control mx-sm-3" id="inputId" name="id" hidden required>
        </div>
        <div class="grupo-input">
            <div class="form-group">
                <label for="validationServer01">Nombre</label>
                <input type="text" class="form-control mx-sm-3" id="validationServer01" name="name" required>
            </div>
            <div class="form-group">
                <label for="validationServer02">Apellido</label>
                <input type="text" class="form-control mx-sm-3" id="validationServer02" name="lastname" required>
            </div>
            <div class="form-group">
                <label for="inputEmail3">Email</label>
                <input type="email" class="form-control mx-sm-3" id="inputEmail3" name="email" required>
            </div>
        </div>
        <div class="grupo-input">
            <div class="form-group">
                <label for="validationServer01">Teléfono</label>
                <input type="text" class="form-control mx-sm-3" id="phone" name="phone" required>
            </div>
            <div class="form-group">
                <label for="validationServer01">Dirección</label>
                <input type="text" class="form-control mx-sm-3" id="adress" name="adress" required>
            </div>
            <div class="form-group">
                <label for="validationServer01">Puesto</label>
                <input type="text" class="form-control mx-sm-3" id="puesto" name="position" required>
            </div>
        </div>
        <div class="form-group">
            <label for="formFile" class="form-label">Añade una imagen del contacto...</label>
            <input class="form-control" type="file" id="formFile" name="img">
        </div>
        <div class="form-group">
            <label for="customRange3" class="form-label">Rango de interés</label>
            <input type="range" class="form-range" min="0" max="100" step="25" id="customRange3" name="interest">
        </div>
        <div class="region-select-container">
            <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupSelect01">Región</label>
                <select class="form-select" id="select-region">
                    <option selected>Elige...</option>
                </select>
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupSelect01">País</label>
                <select class="form-select" id="select-country" disabled>
                    <option selected>Elige...</option>
                </select>
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupSelect01">Ciudad</label>
                <select class="form-select" id="select-city" name="cityId" disabled>
                    <option selected>Elige...</option>
                </select>
            </div>
        </div>
        <div class="company-select-container">
            <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupSelect01">Compania</label>
                <select class="form-select" id="select-company" name="companyId">
                    <option selected>Elige...</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary" id="edit_btn">Editar Contacto</button>
    </form>
</div>