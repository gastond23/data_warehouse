<h1 class="users-title">Usuarios</h1>
<% if(data.length <= 0) { %>
<div class="no-data-container">
    <h3>No existen usuarios</h3>
    <a class="btn btn-primary" href="#" role="button">Agregar Usuario</a>
</div>
<% } else if (data.length > 0) { %>
<div class="agregar-user-container">
    <a class="btn btn-primary" href="#" role="button">Agregar Usuario</a>
</div>

<table id="table" class="table table-striped table-sm table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre y Apellido</th>
            <th scope="col">Email</th>
            <th scope="col">Permisos</th>
            <th scope="col">Acci√≥n</th>
        </tr>
    </thead>
    <tbody>
        <% for (let users of data) { %>
        <tr>
            <th scope="row" class="align-middle"><%= users.id %> </th>
            <td class="align-middle"><%= users.name %> <%= users.lastname %></td>
            <td class="align-middle"><%= users.email %></td>
            <td class="align-middle"><%= users.admin %></td>
            <td class="align-middle">
                <button type="button" class="btn btn-primary">Editar</button>
                <button type="button" class="btn btn-danger">Borrar</button>
            </td>
        </tr>
        <% }; %>
    </tbody>
</table>
<% } %>